<%= form_with(model: peca) do |form| %>
  <% if peca.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(peca.errors.count, "error") %> proibiu que este pecado fosse salvo:</h2>

      <ul>
        <% peca.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :nome, style: "display: block" %>
    <%= form.text_field :nome %>
  </div>

  <div>
    <%= form.label :valor, style: "display: block" %>
    <%= form.text_field :valor %>
  </div>

  <div>
    <%= form.label :fornecedor_id, style: "display: block" %>
    <%= form.collection_select :fornecedor_id, Fornecedor.all, :id, :nome, prompt: "Selecione um fornecedor"  %>
  </div>

  <div>
    <%= form.submit 'Criar' %>
  </div>
<% end %>
